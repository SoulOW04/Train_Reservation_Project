
@{
    ViewBag.Title = "Contact";
    //Layout = "~/HomeForm/Contact.cshtml";
}
<html>
<head>
    <title>Contact us</title>
    @*<link rel="stylesheet" href="@Url.Content("~/HomeForm/contact.css")">*@
    <link href="https://fonts.googleapis.com/css?family=Quicksand&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0">
</head>
<body>
    <div class="container">
        <div class="contact-box">
            <div class="left"></div>
            <div class="right">
                <h1>Contact Us</h1>
                <div class="social">
                    <img src="~/HomeForm/fb.png" />
                    <img src="~/HomeForm/tw.png" />
                    <img src="~/HomeForm/gp.png" />
                </div>
                <input type="text" class="field" placeholder="Your Name">
                <input type="text" class="field" placeholder="Your Email">
                <input type="text" class="field" placeholder="Phone">
                <textarea placeholder="Message" class="field"></textarea>
                <button class="btn">Send</button>
            </div>
        </div>
    </div>
    <style>
        *{
	padding: 0;
	margin: 0;
    font-family: 'Quicksand', sans-serif;
}

body{
	height: 100%;
	width: 80%;
    background:url("https://i.ytimg.com/vi/9j_7IgS-2G8/maxresdefault.jpg")
}

.container{
	width: 100%;
	height: 100%;
   
}

.container:after{
	content: '';
	position: absolute;
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
	background-size: cover;
	filter: blur(50px);
	z-index: -1;
}
.contact-box{
	width: 950px;
	display: grid;
	justify-content:center;
	align-items: center;
	text-align: center;
	background-color: #fff;
	box-shadow: 0px 0px 19px 5px rgba(0,0,0,0.19);
    height:600px;
    margin-left:23%;
}

.left{
	background-image: linear-gradient(#70e1f5,#ffd194);
	background-size: cover;
	height: 160%;
    width: 129.8%;
    margin-left:-109px;
    
}

.right{
	padding: 15px 40px;
}

h2{
	position: relative;
	padding: 0 0 10px;
	margin-bottom: 10px;
}

h2:after{
	content: '';
    position: absolute;
    left: 50%;
    bottom: 0;
    transform: translateX(-50%);
    height: 4px;
    width: 50px;
    border-radius: 2px;
    background-color: #2ecc71;
}

.field{
	width: 100%;
	border: 2px solid rgba(0, 0, 0, 0);
	outline: none;
	background-color: rgba(230, 230, 230, 0.6);
	padding: 0.5rem 1rem;
	font-size: 1.1rem;
	margin-bottom: 22px;
	transition: .3s;
}

.field:hover{
	background-color: rgba(0, 0, 0, 0.1);
}

textarea{
	min-height: 150px;
}

.btn{
	width: 50%;
	padding: 8px 1rem;
	background:linear-gradient(to right, #ff105f,#ffad06);
	color: #fff;
	font-size: 1.1rem;
	border: none;
	outline: none;
	cursor: pointer;
	transition: .3s;
}

.btn:hover{
    background-color: #27ae60;
}

.field:focus{
    border: 2px solid rgba(30,85,250,0.47);
    background-color: #fff;
}

.social img{
    width:30px;
    margin-left:10px;
    margin-bottom:30px;
}
.right h1{
    font-family:'Times New Roman', Times, serif;
    margin-bottom:30px;
}
    </style>
</body>

</html>

