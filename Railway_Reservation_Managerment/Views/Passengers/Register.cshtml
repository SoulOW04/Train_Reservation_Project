@model Railway_Reservation_Managerment.Models.Passenger


<html>
<head>
    <link rel="stylesheet" href="@Url.Content("~/HomeForm/LoginRegisterUser/RegisterGuest.css")">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    @using (Html.BeginForm())
    {
        <div class="hero">
            <div class="form-box">
                @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form id="login" class="input-group">

                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <h2 style="margin-left: 100px">Register</h2>
                        <hr />

                        <div class="form-group">
                            <label>Name:</label>
                            @Html.EditorFor(model => model.Login_Name, new { htmlAttributes = new { @class = "form-control" } })

                            @Html.ValidationMessageFor(model => model.Login_Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">

                            <label>Email:</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })

                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">

                            <label>Password:</label>
                            @Html.EditorFor(model => model.Login_Password, new { htmlAttributes = new { @class = "form-control" } })

                            @Html.ValidationMessageFor(model => model.Login_Password, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">

                            <label>Comfirm Password:</label>
                            @Html.EditorFor(model => model.Confirm_Password, new { htmlAttributes = new { @class = "form-control" } })

                            @Html.ValidationMessageFor(model => model.Confirm_Password, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">

                            <label>Phone:</label>
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })

                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })

                        </div>
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Register" class="submit-btn" />
                        </div>

                    </div>


                </form>
            </div>
        </div>
    }

    @if (TempData["mss"] != null)
    {
            <script>
                $(document).ready(function () {
                    alert('@TempData["mss"]');
                });
            </script>
    }

</body>
</html>
@*<div>
        @Html.ActionLink("Back to List", "Index")
    </div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    * {
        margin: 0;
        padding: 0;
    }

    .hero {
        height: 100%;
        width: 100%;
        background: linear-gradient(#49a09d, #5f2c82);
        background-position: center;
        background-size: cover;
        position: absolute;
        margin-left: 0px;
    }

    .form-box {
        width: 420px;
        height: 600px;
        position: relative;
        margin: 6% auto;
        background: #fff;
        padding: 5px;
        overflow: hidden;
        box-shadow: 0 14px 28px rgba(0,0,0,0.25),0 10px 10px rgba(0,0,0,0.22);
        border-radius: 3px;
    }

    .input-group {
        top: 120px;
        position: absolute;
        width: 280px;
        transition: .5s;
        margin-left: 40px;
    }

    .form-group input {
        width: 100%;
        padding: 10px 0;
        margin: 20px 0;
        border-left: 0;
        border-top: 0;
        border-right: 0;
        border-bottom: 1px solid #999;
        outline: none;
        background: transparent;
    }

    .submit-btn {
        width: 85%;
        padding: 10px 30px;
        cursor: pointer;
        display: block;
        margin: -45px;
        background: linear-gradient(to right, #ff105f,#ffad06);
        border: 0;
        outline: none;
        border-radius: 30px;
        margin-top: 2px;
    }

    .form-horizontal {
        margin-left: 50px;
    }

    .form-group label {
        position: absolute;
        font-size: 16px;
    }

    .form-horizontal h3 {
        margin-left: 120px;
    }

    .form-horizontal hr {
        margin-left: -40px;
    }
</style>
